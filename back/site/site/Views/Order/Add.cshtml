@model site.Models.AddOrderViewModel

@{
}

<h1>Добавить заказ</h1>
<form method="post" action="Add">
    <div class="mb-3">
        <label for="" class="form-label">Клиент</label>
        <input type="text" class="form-control" asp-for="ClientID">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Работник</label>
        <input type="text" class="form-control" asp-for="EmployeeId">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">ProductId</label>
        <input type="tel" class="form-control" asp-for="ProductId">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">NumberContact</label>
        <input type="tel" class="form-control" asp-for="NumberContact">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Data</label>
        <input type="date" class="form-control" asp-for="Data">
    </div>
    <button type="submit" class="btn btn-primary">Подтвердить</button>
</form>